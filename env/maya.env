{
'tool': 'maya', 
'version': '',
'platforms': [ 'windows', 'linux', 'darwin' ],
'requires': [ 'base' ],


'environment': {
    'RS_DEPT': 'POST',
    'MAYA_ver': '2015',
    'PYTHON_ver': '2.7.9',

    'STUDIO_ver': 'v0002',
    'CHANNEL': 'stable',

    'RS_DEPLOY'   : '${RS_SYS_RES}/live/deploy',
    'RS_DEPLOY_studio': '${RS_DEPLOY}/rs-studio/${STUDIO_ver}',


    'DEADLINE_standalone': '${RS_STUDIO_envs}/deadline/Deadline7',
    'NIM_CONNECTOR': '${RS_STUDIO_envs}/NIM/nim_connector_v1-0-0-150810',
    
    'MAYA_LOCATION': { 
        'darwin' : '/Applications/Autodesk/maya${MAYA_ver}/Maya.app/Contents',
        'linux'  : '/usr/autodesk/maya${MAYA_ver}-x64',
        'windows': 'C:/Program Files/Autodesk/Maya${MAYA_ver}', 
    },

    'PATH': { 
        'darwin': 
                '${MAYA_LOCATION}/bin:${PYTHONHOME}/Scripts',
        'linux': 
                '${MAYA_LOCATION}/bin:${PYTHONHOME}/Scripts',
        'windows': 
            '${MAYA_LOCATION}/bin;'  \
            '${PYTHONHOME}/Scripts;'  \
            '${MAYA_LOCATION}/Python/Lib/site-packages/pymel/tools/bin;'  \
            'C:/Program Files/Common Files/Autodesk Shared;'  \
            'C:/Program Files (x86)/Autodesk/Backburner',
    },
    
    'PYTHONHOME': { 
        'darwin': '${MAYA_LOCATION}/Python',
         'linux': '${MAYA_LOCATION}/Python',
       'windows': '${MAYA_LOCATION}/Python', 
       },
    
    'DYLD_LIBRARY_PATH': { 'darwin': '${MAYA_LOCATION}/MacOS', },
     
    'RS_STUDIO_ICONS':   '${RS_DEPLOY}/resources',
    'MAYA_PRESETS_PATH': '${RS_STUDIO_envs}/maya/presets',
    'MAYA_PLUG_IN_PATH': { 'windows': '${MAYA_MODULE_PATH}/${MAYA_ver}-windows', },
    'MAYA_MODULE_PATH': '${RS_STUDIO_envs}/maya/modules',
     
    'MI_CUSTOM_SHADER_PATH': { 'windows': '${RS_STUDIO_envs}/maya/${MAYA_ver}/mentalray/win64/include', },
    
    'RS_LAUNCHER_maya': '${RS_LAUNCHER}/python/RS/launch/maya',
    
    'RS_STUDIO_MEL': '${RS_DEPLOY_studio}/rs-mel',
    'MAYA_SCRIPT_PATH': '${RS_STUDIO_MEL}/scripts',
        'RS_TOOLS_MEL_STARTUP'  : '${MAYA_SCRIPT_PATH}/startup',
        'RS_TOOLS_MEL_OVERRIDES': '${MAYA_SCRIPT_PATH}/overrides',
    'RS_TOOLS_SHELF': '${RS_STUDIO_MEL}/shelves',
    
    'RS_PY_MAYA_lib': {
        'darwin': '${RS_STUDIO_envs}/maya/${MAYA_ver}/python/py${PYTHON_ver}-osx/lib/site-packages',
       'windows': '${RS_STUDIO_envs}/maya/${MAYA_ver}/python/py${PYTHON_ver}-win64/lib/site-packages',
    },

    'PYTHONPATH': '${RS_PY_MAYA_lib};' \
      '${RS_LAUNCHER}/maya/${RS_DEPT};'  \
      '${RS_IACTIVE_tools}/vred;'  \
#      '${RS_IACTIVE_tools}/python;'  \
      '${RS_IACTIVE_tools}/maya;'  \
      '${DEADLINE_standalone}/python;'  \
      '${NIM_connector}',
    },
}


