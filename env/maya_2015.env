{
'tool': 'maya', 
'version': '2015',
'platforms': [ 'windows', 'linux', 'darwin' ],
'requires': [ 'mtoa' ],

'environment': {
    'RS_DEPARTMENT': 'POST',
    'MAYA_VERSION': '2015',
    'PYTHON_VERSION': '2.7.9',
    'DEADLINE_STANDALONE': '${RS_SW_BASE}/deadline/Deadline7',
    'NIM_CONNECTOR': '${RS_SW_BASE}/NIM/nim_connector_v1-0-0-150810',
    'GIT_DIR': '${RS_SW_BASE}/git/PortableGit-2.6.3-64-bit',
    
    'MAYA_LOCATION': { 'darwin' : '/Applications/Autodesk/maya${MAYA_VERSION}/Maya.app/Contents',
                       'linux'  : '/usr/autodesk/maya${MAYA_VERSION}-x64',
                       'windows': 'C:/Program Files/Autodesk/Maya${MAYA_VERSION}', 
    },
    'PATH': { 'darwin': '${MAYA_LOCATION}/bin',
               'linux': '${MAYA_LOCATION}/bin',
             'windows': '${MAYA_LOCATION}/bin;'  \
                        '${PYTHONHOME}/Scripts;'  \
                        '${MAYA_LOCATION}/Python/Lib/site-packages/pymel/tools/bin;'  \
                        'C:/Program Files/Common Files/Autodesk Shared/;'  \
                        'C:/Program Files (x86)/Autodesk/Backburner;'  \
                        '${GIT_DIR}/cmd',
    },
    'PYTHONHOME': { 'darwin': '${MAYA_LOCATION}/Python',
                     'linux': '${MAYA_LOCATION}/Python',
                   'windows': '${MAYA_LOCATION}/Python', },
    
    'DYLD_LIBRARY_PATH': { 'darwin': '${MAYA_LOCATION}/MacOS', },
     
    'RS_STUDIO_MAYA': 'S:/MayaAPPDIR',
    
    'RS_STUDIO_ICONS':   '${RS_STUDIO_MAYA}/icons',
    'MAYA_PRESETS_PATH': '${RS_STUDIO_MAYA}/presets',
    'MAYA_PLUG_IN_PATH': { 'windows': '${MAYA_MODULE_PATH}/${MAYA_VERSION}-windows', },
     
    'MI_CUSTOM_SHADER_PATH': { 'windows': '${RS_STUDIO_MAYA}/mentalray/win64-$MAYA_VERSION/include', },
    
    # indirection envVars
    
    'RS_LAUNCHER_MAYA': '${RS_LAUNCHER}/RS/launch/maya',
    
    'MAYA_SCRIPT_PATH': '${RS_TOOLS_MEL}/scripts',
        'RS_TOOLS_MEL_STARTUP'  : '${MAYA_SCRIPT_PATH}/startup',
        'RS_TOOLS_MEL_OVERRIDES': '${MAYA_SCRIPT_PATH}/overrides',
    'RS_TOOLS_SHELF': '${RS_TOOLS_MEL}/shelves',
    
    # Interactive env
    
    'RS_IACTIVE_TOOLS': 'I:/tools',
    'PYTHONPATH': '${RS_PY_SITE_PACKAGES};'  \
      '${RS_PY_TOOLS};'  \
      '${RS_LAUNCHER};'  \
      '${RS_LAUNCHER_MAYA}/${RS_DEPARTMENT};'  \
      '${DEADLINE_STANDALONE}/python;'  \
      '${RS_IACTIVE_TOOLS};'  \
      '${RS_IACTIVE_TOOLS}/vred;'  \
      '${RS_IACTIVE_TOOLS}/python;'  \
      '${RS_IACTIVE_TOOLS}/maya;'  \
      '${NIM_CONNECTOR}',
    },

'optional': {
    'stable': {
        'STUDIO_VERSION': 'v0002',
        'CHANNEL': 'stable',
        
        'RS_STUDIO_DEPLOY' : '${RS_STUDIO_BASE}/${STUDIO_VERSION}',
        'MAYA_MODULE_PATH':  '${RS_STUDIO_MAYA}/modules',

        'RS_LAUNCHER' : '${RS_STUDIO_DEPLOY}/launcher',
        'RS_PY_TOOLS' : '${RS_STUDIO_DEPLOY}/tools/python;${RS_STUDIO_DEPLOY}/python',
        'RS_TOOLS_MEL': '${RS_STUDIO_DEPLOY}/tools/mel',

        'RS_PY_SITE_PACKAGES': 'S:/dev_area/production/Envs/maya/${MAYA_VERSION}/python${PYTHON_VERSION}/lib/site-packages',
        },
    'rc': {
        'CHANNEL': 'rc',
        
        'RS_STUDIO_DEPLOY': '${RS_STUDIO_BASE_DEV}/studio-${CHANNEL}',
        'MAYA_MODULE_PATH': '${RS_STUDIO_MAYA}/modules-dev',

        'RS_LAUNCHER' : '${RS_STUDIO_DEPLOY}/launcher/src',
        'RS_PY_TOOLS' : '${RS_STUDIO_DEPLOY}/tools/python/src;${RS_STUDIO_DEPLOY}/src/python',
        'RS_TOOLS_MEL': '${RS_STUDIO_DEPLOY}/tools/mel/src',

        'RS_PY_SITE_PACKAGES': '${RS_STUDIO_ENVS_DEV}/maya/${MAYA_VERSION}/python${PYTHON_VERSION}/lib/site-packages',
        },
    'beta': {
        'CHANNEL': 'beta',
        
        'RS_STUDIO_DEPLOY': '${RS_STUDIO_BASE_DEV}/studio-${CHANNEL}',
        'MAYA_MODULE_PATH': '${RS_STUDIO_MAYA}/modules-dev',

        'RS_LAUNCHER' : '${RS_STUDIO_DEPLOY}/launcher/src',
        'RS_PY_TOOLS' : '${RS_STUDIO_DEPLOY}/tools/python/src;${RS_STUDIO_DEPLOY}/src/python',
        'RS_TOOLS_MEL': '${RS_STUDIO_DEPLOY}/tools/mel/src',

        'RS_PY_SITE_PACKAGES': '${RS_STUDIO_ENVS_DEV}/maya/${MAYA_VERSION}/python${PYTHON_VERSION}/lib/site-packages',
        },
    'alpha': {
        'CHANNEL': 'alpha',
        
        'RS_STUDIO_DEPLOY': '${RS_STUDIO_BASE_DEV}/studio-${CHANNEL}',
        'MAYA_MODULE_PATH': '${RS_STUDIO_MAYA}/modules-dev',

        'RS_LAUNCHER' : '${RS_STUDIO_DEPLOY}/launcher/src',
        'RS_PY_TOOLS' : '${RS_STUDIO_DEPLOY}/tools/python/src;${RS_STUDIO_DEPLOY}/src/python',
        'RS_TOOLS_MEL': '${RS_STUDIO_DEPLOY}/tools/mel/src',

        'RS_PY_SITE_PACKAGES': '${RS_STUDIO_ENVS_DEV}/maya/${MAYA_VERSION}/python${PYTHON_VERSION}/lib/site-packages',
        },
    'assetlib': {
        'CHANNEL': 'assetlib',
        
        'RS_STUDIO_DEPLOY': '${RS_STUDIO_BASE_DEV}/studio-assetlib',
        'MAYA_MODULE_PATH': '${RS_STUDIO_MAYA}/modules-dev',

        'RS_LAUNCHER' : '${RS_STUDIO_DEPLOY}/launcher/src',
        'RS_PY_TOOLS' : '${RS_STUDIO_DEPLOY}/tools/python/src;${RS_STUDIO_DEPLOY}/src/python',
        'RS_TOOLS_MEL': '${RS_STUDIO_DEPLOY}/tools/mel/src',

        'RS_PY_SITE_PACKAGES': '${RS_STUDIO_ENVS_DEV}/maya/${MAYA_VERSION}/python${PYTHON_VERSION}/lib/site-packages',
        },
    'dev': {
        'CHANNEL': 'dev',
        
        # ${RS_STUDIO_DEPLOY} is defined in dev.env
        'MAYA_MODULE_PATH': '${RS_STUDIO_MAYA}/modules-dev',
        
        'RS_PY_SITE_PACKAGES': '${RS_STUDIO_ENVS_DEV}/maya/${MAYA_VERSION}/python${PYTHON_VERSION}/lib/site-packages',

        'RS_LAUNCHER' : '${RS_STUDIO_DEPLOY}/launcher/src',
        'RS_PY_TOOLS' : '${RS_STUDIO_DEPLOY}/tools/python/src;${RS_STUDIO_DEPLOY}/src/python',
        'RS_TOOLS_MEL': '${RS_STUDIO_DEPLOY}/tools/mel/src',
        
        'RS_IACTIVE_SHELF': '${RS_IACTIVE_TOOLS}/maya/scripts/shelves',
        
        },
    },
}

