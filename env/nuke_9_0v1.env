{
'tool': 'nuke', 
'version': '9.0v1',
'platforms': [ 'windows', 'linux', 'darwin' ],
'requires': [ 'base' ],


'environment': {
    'RS_DEPT': 'POST',
    'NUKE_MAJOR_VERSION': '9.0',
    'NUKE_MINOR_VERSION': '1',
    'NUKE_VERSION': 'Nuke${NUKE_MAJOR_VERSION}v${NUKE_MINOR_VERSION}',
    
    'PYTHON_ver': '2.7.9',

    'NUKE_BASE': '${RS_SYS_RES_new}/sw/apps/thefoundry/${NUKE_VERSION}',
    'NUKE_LOCATION': {
         'darwin': '${NUKE_BASE}-osx64',
          'linux': '${NUKE_BASE}-linux64',
        'windows': '${NUKE_BASE}-win64',
        },
    
    'NUKEX_VERSION': 'NukeX${NUKE_VERSION}',
    
    'NUKE_PATH': '${RS_LAUNCHER}/python/RS/launch/nuke',
    'PATH': {
         'darwin': '${NUKE_LOCATION}',
          'linux': '${NUKE_LOCATION}',
        'windows': '${NUKE_LOCATION}'
    },
},
    
'optional': {
        'beta': {
            'CHANNEL': 'beta',
            'RS_DEPLOY'       : '${RS_DEPLOY_unstable}',
            'RS_DEPLOY_studio': '${RS_DEPLOY_unstable}/rs-studio/studio-${CHANNEL}/src',
        },
        
        'dev': {
            'CHANNEL': 'dev',
            'RS_DEPLOY': '${RS_DEPLOY_dev}',
            # RS_DEPLOY_studio - in dev.env
        },
    },
}
