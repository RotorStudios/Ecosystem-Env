{
'tool': 'base',
'version': '',
'platforms': [ 'windows', 'linux', 'darwin' ],
'requires': [],

'environment':
    {
    'OSNAME': {'darwin': '`uname -s`', 'linux': '`uname -s`', 'windows': 'Windows', 'strict': True, },
    
    'PATH': { 'darwin' : '/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:/usr/share/bin',
              'linux'  : '/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:/usr/share/bin',
              'windows': '${RS_DEPLOY}/lib', 
            },
    
    'RS_SYS_RES': { 'strict': True,
        'darwin' : '/base/sw',
        'linux'  : '/base/sw',
        'windows': 'S:'
        },
     
    'RS_STUDIO_envs': '${RS_DEPLOY}/rs-studio-envs',
    
    'RS_USER_home'    : '${RS_SYS_RES}/dev/personal_test/${USERNAME}',
    'RS_USER_DEV_home': '${RS_SYS_RES}/dev/users/${USERNAME}',
    'RS_IACTIVE_tools': { 'windows': 'S:/iactive/tools', },

    'RS_LAUNCHER' : '${RS_DEPLOY_studio}/rs-launch',
    'RS_STUDIO_PY': '${RS_DEPLOY_studio}/rs-python/python',

    'PYTHON_LOCATION': {
        'darwin': '${RS_STUDIO_envs}/python/py${PYTHON_ver}-osx', 
       'windows': '${RS_STUDIO_envs}/python/py${PYTHON_ver}-win64', 
    },

    'PYTHONPATH': '${RS_LAUNCHER}/python;${RS_STUDIO_PY};${PYTHON_LOCATION}/Lib/site-packages',
},

'optional': {
    'dev': {
        'RS_GIT_dir': '${RS_SYS_RES}/dev/auxiliary/utilities/git/PortableGit-2.6.3-64-bit',
        
        'PATH': '${RS_DEPLOY}/lib;'  \
            '${RS_SYS_RES}/dev/auxiliary/lib;'  \
            '${RS_SYS_RES}/dev/auxiliary/utilities;'  \
            '${RS_GIT_dir};'  \
            '${RS_USER_DEV_area}/auxiliary/bin',  \
        },
    },
}